<div class="experiences">
    <div class="subtitle">
        {{ .Labels.Experiences }}
    </div>
    {{$since := .Labels.Since}}
    {{range .Work }}
        <div class="element">
            <div class="position">
                {{.Position}}
                {{if .Company}}
                    <span>| {{.Company}}</span>
                {{end}}
            </div>

            <div class="dates">
                {{if .Location}}
                    <span>{{.Location}}</span> |
                {{end}}
                {{if .EndDate}}
                    {{ formatDate "Jan, 2006" .StartDate }} -  {{ formatDate "Jan, 2006" .EndDate }}
                {{else}}
                    {{$since}} {{ formatDate "Jan, 2006" .StartDate }}
                {{end}}
            </div>

            <div class="description">
                {{.Summary}}
            </div>
        </div>
    {{end}}
</div>
